<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Каталоги и пути к ним (начинаются с /)">

        <EditTextPreference
            app:key="main_dir"
            app:title="Абсолютный адрес внешней CD карты"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="start_dir"
            app:title="Стартовый каталог"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="MyDir"
            app:title="Текущий каталог"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Опции проигрываемого файла">

        <EditTextPreference
            app:key="PlayedFile"
            app:title="Проигрываемый файл"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>